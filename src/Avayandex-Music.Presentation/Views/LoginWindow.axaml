<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avayandex_Music.Presentation.Views.LoginWindow"
        Title="AuthorizationWindow">
    
    <StackPanel Margin="15">
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5">Enter login</TextBlock>
            <TextBox x:Name="LoginTextBox"></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5">Enter password</TextBlock>
            <TextBox x:Name="PasswordTextBox"></TextBox>
        </StackPanel>
        
        <Button Margin="5"
                x:Name="TryLoginButton">Login</Button>
    </StackPanel>
</Window>
