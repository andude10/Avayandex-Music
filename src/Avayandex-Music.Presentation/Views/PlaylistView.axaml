<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:track="clr-namespace:Yandex.Music.Api.Models.Track;assembly=Yandex.Music.Api"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avayandex_Music.Presentation.Views.PlaylistView"
             x:Name="Control">
    <Grid RowDefinitions="Auto,*">
        <Button x:Name="StartPlayButton"
                Width="100" Height="30" Margin="15">
            Start play
        </Button>

        <ListBox Grid.Row="1" x:Name="TracksListBox">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="track:YTrack">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Title}" />
                        <Label Content="{Binding IsSuitableForChildren}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>